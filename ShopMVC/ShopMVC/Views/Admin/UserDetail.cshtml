@model ShopMVC.Models.User
@{
    ViewData["Title"] = "Chi tiết người dùng";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 text-gray-800">
            <i class="fas fa-user"></i> Chi tiết người dùng: @Model.FullName
        </h1>
        <a asp-action="Users" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Quay lại
        </a>
    </div>

    <div class="row">
        <!-- User Info -->
        <div class="col-lg-4 mb-4">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Thông tin tài khoản</h6>
                </div>
                <div class="card-body text-center">
                    <div class="user-avatar mx-auto mb-3" style="width: 100px; height: 100px; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); border-radius: 50%; display: flex; align-items: center; justify-content: center; color: #fff; font-size: 2.5rem; font-weight: 700;">
                        @Model.Username.Substring(0, 1).ToUpper()
                    </div>
                    <h5 class="mb-1">@Model.FullName</h5>
                    <p class="text-muted mb-3">@@@Model.Username</p>
                    <span class="badge badge-@(Model.Role == "Admin" ? "danger" : Model.Role == "Staff" ? "warning" : "primary") p-2">
                        <i class="fas fa-shield-alt"></i> @Model.Role
                    </span>
                    <span class="badge badge-@(Model.IsActive ? "success" : "secondary") p-2 ml-2">
                        @(Model.IsActive ? "Hoạt động" : "Vô hiệu hóa")
                    </span>
                </div>
            </div>

            <div class="card shadow">
                <div class="card-header py-3 bg-danger text-white">
                    <h6 class="m-0 font-weight-bold">Thao tác</h6>
                </div>
                <div class="card-body">
                    @if (Model.IsActive)
                    {
                        <form asp-action="DeactivateUser" asp-route-id="@Model.UserId" method="post" 
                              onsubmit="return confirm('Bạn có chắc muốn vô hiệu hóa tài khoản này?')">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-warning btn-block mb-2">
                                <i class="fas fa-ban"></i> Vô hiệu hóa tài khoản
                            </button>
                        </form>
                    }
                    else
                    {
                        <form asp-action="ActivateUser" asp-route-id="@Model.UserId" method="post">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-success btn-block mb-2">
                                <i class="fas fa-check"></i> Kích hoạt tài khoản
                            </button>
                        </form>
                    }
                    <a href="mailto:@Model.Email" class="btn btn-info btn-block">
                        <i class="fas fa-envelope"></i> Gửi email
                    </a>
                </div>
            </div>
        </div>

        <!-- Detailed Info & Orders -->
        <div class="col-lg-8 mb-4">
            <!-- Detailed Info -->
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Thông tin chi tiết</h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <p><strong>Mã người dùng:</strong><br>#@Model.UserId</p>
                            <p><strong>Tên đăng nhập:</strong><br>@Model.Username</p>
                            <p><strong>Họ tên:</strong><br>@Model.FullName</p>
                            <p><strong>Email:</strong><br>@Model.Email</p>
                        </div>
                        <div class="col-md-6">
                            <p><strong>Số điện thoại:</strong><br>@(Model.Phone ?? "Chưa cập nhật")</p>
                            <p><strong>Vai trò:</strong><br>@Model.Role</p>
                            <p><strong>Ngày tạo:</strong><br>@Model.CreatedDate.ToString("dd/MM/yyyy HH:mm")</p>
                            <p><strong>Trạng thái:</strong><br>
                                <span class="badge badge-@(Model.IsActive ? "success" : "secondary")">
                                    @(Model.IsActive ? "Hoạt động" : "Vô hiệu hóa")
                                </span>
                            </p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Orders History -->
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Lịch sử đơn hàng</h6>
                </div>
                <div class="card-body">
                    @{
                        var orders = ViewBag.Orders as IEnumerable<ShopMVC.Models.Order>;
                        
                        if (orders != null && orders.Any())
                        {
                            var ordersList = orders.ToList();
                            
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th>Mã ĐH</th>
                                            <th>Ngày đặt</th>
                                            <th>Tổng tiền</th>
                                            <th>Trạng thái</th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var order in ordersList)
                                        {
                                            <tr>
                                                <td><strong>#@order.OrderId</strong></td>
                                                <td>@order.OrderDate.ToString("dd/MM/yyyy")</td>
                                                <td><strong>@order.TotalAmount?.ToString("N0") đ</strong></td>
                                                <td>
                                                    <span class="badge badge-@(order.Status switch {
                                                        "Pending" => "warning",
                                                        "Approved" => "info",
                                                        "Shipping" => "primary",
                                                        "Completed" => "success",
                                                        "Cancelled" => "secondary",
                                                        _ => "secondary"
                                                    })">
                                                        @(order.Status switch {
                                                            "Pending" => "Chờ duyệt",
                                                            "Approved" => "Đã duyệt",
                                                            "Shipping" => "Đang giao",
                                                            "Completed" => "Hoàn thành",
                                                            "Cancelled" => "Đã hủy",
                                                            _ => order.Status
                                                        })
                                                    </span>
                                                </td>
                                                <td>
                                                    <a asp-action="OrderDetail" asp-route-id="@order.OrderId" class="btn btn-sm btn-info">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>

                            <div class="mt-3">
                                <p class="text-muted mb-0">
                                    <strong>Tổng số đơn:</strong> @ordersList.Count đơn hàng<br>
                                    <strong>Tổng chi tiêu:</strong> <span class="text-success h5">@ordersList.Sum(o => o.TotalAmount ?? 0).ToString("N0") đ</span>
                                </p>
                            </div>
                        }
                        else
                        {
                            <div class="text-center py-5 text-muted">
                                <i class="fas fa-inbox fa-3x mb-3"></i>
                                <p>Người dùng chưa có đơn hàng nào</p>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div>