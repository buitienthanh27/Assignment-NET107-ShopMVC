@model ShopMVC.ViewModels.AdminUserViewModel
@{
    ViewData["Title"] = "Quản lý Người dùng";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <h1 class="h3 mb-4 text-gray-800">Quản lý Người dùng</h1>

    <!-- Filter -->
    <div class="card shadow mb-4">
        <div class="card-body">
            <form method="get" class="row">
                <div class="col-md-4">
                    <select name="role" class="form-control" onchange="this.form.submit()">
                        <option value="">-- Tất cả vai trò --</option>
                        <option value="User" selected="@(Model.RoleFilter == "User")">User</option>
                        <option value="Staff" selected="@(Model.RoleFilter == "Staff")">Staff</option>
                        <option value="Admin" selected="@(Model.RoleFilter == "Admin")">Admin</option>
                    </select>
                </div>
                <div class="col-md-6">
                    <input type="text" name="search" class="form-control" placeholder="Tìm kiếm..." value="@Model.SearchTerm">
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary btn-block">
                        <i class="fas fa-search"></i> Tìm
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Users Table -->
    <div class="card shadow">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Username</th>
                            <th>Họ tên</th>
                            <th>Email</th>
                            <th>Vai trò</th>
                            <th>Ngày tạo</th>
                            <th>Trạng thái</th>
                            <th>Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model.Users)
                        {
                            <tr>
                                <td><strong>@user.Username</strong></td>
                                <td>@user.FullName</td>
                                <td>@user.Email</td>
                                <td>
                                    <span class="badge badge-@(user.Role == "Admin" ? "danger" : user.Role == "Staff" ? "warning" : "primary")">
                                        @user.Role
                                    </span>
                                </td>
                                <td>@user.CreatedDate.ToString("dd/MM/yyyy")</td>
                                <td>
                                    <span class="badge badge-@(user.IsActive ? "success" : "secondary")">
                                        @(user.IsActive ? "Hoạt động" : "Vô hiệu hóa")
                                    </span>
                                </td>
                                <td>
                                    <a asp-action="UserDetail" asp-route-id="@user.UserId" class="btn btn-sm btn-info">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    @if (user.IsActive)
                                    {
                                        <form asp-action="DeactivateUser" asp-route-id="@user.UserId" method="post" class="d-inline"
                                              onsubmit="return confirm('Bạn có chắc muốn vô hiệu hóa tài khoản này?')">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-sm btn-warning">
                                                <i class="fas fa-ban"></i>
                                            </button>
                                        </form>
                                    }
                                    else
                                    {
                                        <form asp-action="ActivateUser" asp-route-id="@user.UserId" method="post" class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-sm btn-success">
                                                <i class="fas fa-check"></i>
                                            </button>
                                        </form>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            @if (!Model.Users.Any())
            {
                <p class="text-center text-muted py-4">Không có người dùng nào</p>
            }
        </div>
    </div>
</div>