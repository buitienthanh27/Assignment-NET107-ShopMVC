@model ShopMVC.Models.Product
@{
    ViewData["Title"] = "Sửa sản phẩm";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 text-gray-800">
            <i class="fas fa-edit"></i> Sửa sản phẩm: @Model.ProductName
        </h1>
        <a asp-action="Products" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Quay lại
        </a>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow">
                <div class="card-body">
                    <form asp-action="EditProduct" asp-route-id="@Model.ProductId" method="post" enctype="multipart/form-data">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="ProductId" />
                        <input type="hidden" asp-for="Image" />
                        <input type="hidden" asp-for="CreatedDate" />

                        <div class="form-group">
                            <label asp-for="ProductName" class="font-weight-bold">Tên sản phẩm <span class="text-danger">*</span></label>
                            <input asp-for="ProductName" class="form-control" />
                            <span asp-validation-for="ProductName" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="CategoryId" class="font-weight-bold">Danh mục <span class="text-danger">*</span></label>
                            <select asp-for="CategoryId" class="form-control">
                                <option value="">-- Chọn danh mục --</option>
                                @foreach (var category in ViewBag.Categories as List<ShopMVC.Models.Category>)
                                {
                                    <option value="@category.CategoryId" selected="@(Model.CategoryId == category.CategoryId)">
                                        @category.CategoryName
                                    </option>
                                }
                            </select>
                            <span asp-validation-for="CategoryId" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Description" class="font-weight-bold">Mô tả</label>
                            <textarea asp-for="Description" class="form-control" rows="5"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="Price" class="font-weight-bold">Giá bán (đ) <span class="text-danger">*</span></label>
                                    <input type="text" class="form-control" id="priceInput" value="@Model.Price.ToString("N0")" />
                                    <input type="hidden" asp-for="Price" id="priceValue" value="@Model.Price" />
                                    <span asp-validation-for="Price" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="Stock" class="font-weight-bold">Số lượng <span class="text-danger">*</span></label>
                                    <input asp-for="Stock" type="number" class="form-control" />
                                    <span asp-validation-for="Stock" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="IsActive" class="font-weight-bold">Trạng thái</label>
                                    <select asp-for="IsActive" class="form-control">
                                        <option value="true">Hoạt động</option>
                                        <option value="false">Ngừng bán</option>
                                    </select>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Color" class="font-weight-bold">Màu sắc</label>
                                    <input asp-for="Color" class="form-control" />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Size" class="font-weight-bold">Kích thước</label>
                                    <input asp-for="Size" class="form-control" />
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="font-weight-bold">Hình ảnh hiện tại</label>
                            @if (!string.IsNullOrEmpty(Model.Image))
                            {
                                <div class="mb-2">
                                    <img src="~/images/products/@Model.Image" alt="@Model.ProductName"
                                         class="img-thumbnail" style="max-width: 200px; max-height: 200px;">
                                </div>
                            }
                            else
                            {
                                <p class="text-muted">Chưa có hình ảnh</p>
                            }
                        </div>

                        <div class="form-group">
                            <label class="font-weight-bold">Thay đổi hình ảnh</label>
                            <div class="custom-file">
                                <input type="file" name="imageFile" class="custom-file-input" id="imageFile" accept="image/*" onchange="previewImage(this)">
                                <label class="custom-file-label" for="imageFile">Chọn file ảnh mới...</label>
                            </div>
                            <small class="form-text text-muted">
                                <i class="fas fa-info-circle"></i> Để trống nếu không muốn thay đổi ảnh
                            </small>
                        </div>

                        <div class="form-group">
                            <img id="imagePreview" src="#" alt="Preview" class="img-thumbnail d-none" style="max-width: 300px; max-height: 300px;">
                        </div>

                        <div class="form-group mt-4">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-save"></i> Cập nhật
                            </button>
                            <a asp-action="Products" class="btn btn-secondary btn-lg">
                                <i class="fas fa-times"></i> Hủy
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card shadow mb-4">
                <div class="card-header bg-warning text-white">
                    <h6 class="m-0"><i class="fas fa-info-circle"></i> Thông tin</h6>
                </div>
                <div class="card-body">
                    <p><strong>Mã sản phẩm:</strong> #@Model.ProductId</p>
                    <p><strong>Ngày tạo:</strong> @Model.CreatedDate.ToString("dd/MM/yyyy HH:mm")</p>
                    <p class="mb-0"><strong>Danh mục:</strong> @Model.Category?.CategoryName</p>
                </div>
            </div>

            <div class="card shadow">
                <div class="card-header bg-danger text-white">
                    <h6 class="m-0"><i class="fas fa-trash"></i> Xóa sản phẩm</h6>
                </div>
                <div class="card-body">
                    <p class="text-muted">Xóa sản phẩm sẽ không thể khôi phục.</p>
                    <form asp-action="DeleteProduct" asp-route-id="@Model.ProductId" method="post"
                          onsubmit="return confirm('Bạn có chắc chắn muốn xóa sản phẩm này?')">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-danger btn-block">
                            <i class="fas fa-trash"></i> Xóa sản phẩm
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // Preview image
        function previewImage(input) {
            const preview = document.getElementById('imagePreview');
            const label = document.querySelector('.custom-file-label');

            if (input.files && input.files[0]) {
                const reader = new FileReader();

                reader.onload = function(e) {
                    preview.src = e.target.result;
                    preview.classList.remove('d-none');
                }

                reader.readAsDataURL(input.files[0]);
                label.textContent = input.files[0].name;
            }
        }

        // Format price input
        const priceInput = document.getElementById('priceInput');
        const priceValue = document.getElementById('priceValue');

        function formatNumber(num) {
            return num.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
        }

        function parseNumber(str) {
            return str.replace(/,/g, '');
        }

        priceInput.addEventListener('input', function(e) {
            let value = parseNumber(e.target.value);
            value = value.replace(/[^\d]/g, '');
            priceValue.value = value;

            if (value) {
                e.target.value = formatNumber(value);
            }
        });

        document.querySelector('form').addEventListener('submit', function() {
            priceValue.value = parseNumber(priceInput.value);
        });
    </script>
}