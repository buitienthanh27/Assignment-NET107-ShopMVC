@model ShopMVC.ViewModels.AdminOrderViewModel
@{
    ViewData["Title"] = "Quản lý Đơn hàng";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <h1 class="h3 mb-4 text-gray-800">Quản lý Đơn hàng</h1>

    <!-- Filter -->
    <div class="card shadow mb-4">
        <div class="card-body">
            <div class="btn-group" role="group">
                <a asp-action="Orders" class="btn btn-@(string.IsNullOrEmpty(Model.StatusFilter) ? "primary" : "outline-primary")">
                    Tất cả
                </a>
                <a asp-action="Orders" asp-route-status="Pending" class="btn btn-@(Model.StatusFilter == "Pending" ? "warning" : "outline-warning")">
                    Chờ duyệt
                </a>
                <a asp-action="Orders" asp-route-status="Approved" class="btn btn-@(Model.StatusFilter == "Approved" ? "info" : "outline-info")">
                    Đã duyệt
                </a>
                <a asp-action="Orders" asp-route-status="Shipping" class="btn btn-@(Model.StatusFilter == "Shipping" ? "primary" : "outline-primary")">
                    Đang giao
                </a>
                <a asp-action="Orders" asp-route-status="Completed" class="btn btn-@(Model.StatusFilter == "Completed" ? "success" : "outline-success")">
                    Hoàn thành
                </a>
                <a asp-action="Orders" asp-route-status="Cancelled" class="btn btn-@(Model.StatusFilter == "Cancelled" ? "secondary" : "outline-secondary")">
                    Đã hủy
                </a>
            </div>
        </div>
    </div>

    <!-- Orders Table -->
    <div class="card shadow">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Mã ĐH</th>
                            <th>Khách hàng</th>
                            <th>Ngày đặt</th>
                            <th>Tổng tiền</th>
                            <th>Trạng thái</th>
                            <th>Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var order in Model.Orders)
                        {
                            <tr>
                                <td><strong>#@order.OrderId</strong></td>
                                <td>@order.User?.FullName</td>
                                <td>@order.OrderDate.ToString("dd/MM/yyyy HH:mm")</td>
                                <td><strong>@order.TotalAmount?.ToString("N0") đ</strong></td>
                                <td>
                                    <span class="badge badge-@(order.Status switch {
                                        "Pending" => "warning",
                                        "Approved" => "info",
                                        "Shipping" => "primary",
                                        "Completed" => "success",
                                        "Cancelled" => "secondary",
                                        _ => "secondary"
                                    })">
                                        @(order.Status switch {
                                            "Pending" => "Chờ duyệt",
                                            "Approved" => "Đã duyệt",
                                            "Shipping" => "Đang giao",
                                            "Completed" => "Hoàn thành",
                                            "Cancelled" => "Đã hủy",
                                            _ => order.Status
                                        })
                                    </span>
                                </td>
                                <td>
                                    <a asp-action="OrderDetail" asp-route-id="@order.OrderId" class="btn btn-sm btn-info">
                                        <i class="fas fa-eye"></i> Chi tiết
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            @if (!Model.Orders.Any())
            {
                <p class="text-center text-muted py-4">Không có đơn hàng nào</p>
            }
        </div>
    </div>
</div>