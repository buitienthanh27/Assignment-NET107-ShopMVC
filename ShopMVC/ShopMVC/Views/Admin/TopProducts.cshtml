@model List<ShopMVC.ViewModels.TopProductReport>
@{
    ViewData["Title"] = "Sản phẩm bán chạy";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 text-gray-800">
            <i class="fas fa-star"></i> Sản phẩm bán chạy
        </h1>
        <a asp-action="Products" class="btn btn-primary">
            <i class="fas fa-box"></i> Quản lý sản phẩm
        </a>
    </div>

    <div class="card shadow">
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Top</th>
                                <th>Sản phẩm</th>
                                <th>Số lượng bán</th>
                                <th>Doanh thu</th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < Model.Count; i++)
                            {
                                var product = Model[i];
                                <tr>
                                    <td>
                                        <span class="badge badge-@(i < 3 ? "warning" : "secondary") p-2" style="font-size: 1rem;">
                                            #@(i + 1)
                                        </span>
                                    </td>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            @if (!string.IsNullOrEmpty(product.Image))
                                            {
                                                <img src="~/images/products/@product.Image" alt="@product.ProductName"
                                                     class="rounded mr-3" style="width: 60px; height: 60px; object-fit: cover;">
                                            }
                                            else
                                            {
                                                <div class="bg-secondary rounded mr-3" style="width: 60px; height: 60px;"></div>
                                            }
                                            <div>
                                                <strong>@product.ProductName</strong><br>
                                                <small class="text-muted">ID: #@product.ProductId</small>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <strong class="text-primary">@product.TotalQuantitySold</strong> sản phẩm
                                    </td>
                                    <td>
                                        <strong class="text-success">@product.TotalRevenue.ToString("N0") đ</strong>
                                    </td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr class="table-info">
                                <td colspan="2"><strong>TỔNG CỘNG</strong></td>
                                <td><strong class="text-primary">@Model.Sum(p => p.TotalQuantitySold) sản phẩm</strong></td>
                                <td><strong class="text-success">@Model.Sum(p => p.TotalRevenue).ToString("N0") đ</strong></td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5 text-muted">
                    <i class="fas fa-box-open fa-3x mb-3"></i>
                    <p>Chưa có dữ liệu bán hàng</p>
                </div>
            }
        </div>
    </div>
</div>