@{
    ViewData["Title"] = "Liên hệ - PhoneShop";
}

<section class="contact-area pt-60 pb-60">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mx-auto text-center mb-5">
                <h2 class="mb-3">Liên hệ với chúng tôi</h2>
                <p class="lead">Có câu hỏi? Hãy gửi tin nhắn cho chúng tôi!</p>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-6 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <h4 class="mb-4">Thông tin liên hệ</h4>
                        
                        <div class="contact-info mb-3">
                            <i class="fa fa-map-marker-alt text-primary me-3"></i>
                            <strong>Địa chỉ:</strong><br>
                            <span class="ms-4">123 Đường ABC, Quận 1, TP.HCM</span>
                        </div>

                        <div class="contact-info mb-3">
                            <i class="fa fa-phone text-success me-3"></i>
                            <strong>Điện thoại:</strong><br>
                            <span class="ms-4"><a href="tel:+84901234567">+84 90 123 4567</a></span>
                        </div>

                        <div class="contact-info mb-3">
                            <i class="fa fa-envelope text-info me-3"></i>
                            <strong>Email:</strong><br>
                            <span class="ms-4"><a href="mailto:info@phoneshop.com">info@phoneshop.com</a></span>
                        </div>

                        <div class="contact-info mb-3">
                            <i class="fa fa-clock text-warning me-3"></i>
                            <strong>Giờ làm việc:</strong><br>
                            <span class="ms-4">Thứ 2 - Chủ nhật: 8:00 - 21:00</span>
                        </div>

                        <hr class="my-4">

                        <h5 class="mb-3">Theo dõi chúng tôi</h5>
                        <div class="social-links">
                            <a href="#" class="btn btn-outline-primary me-2"><i class="fab fa-facebook-f"></i></a>
                            <a href="#" class="btn btn-outline-info me-2"><i class="fab fa-twitter"></i></a>
                            <a href="#" class="btn btn-outline-danger me-2"><i class="fab fa-instagram"></i></a>
                            <a href="#" class="btn btn-outline-danger"><i class="fab fa-youtube"></i></a>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-6 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <h4 class="mb-4">Gửi tin nhắn</h4>
                        
                        <form>
                            <div class="mb-3">
                                <label class="form-label">Họ và tên</label>
                                <input type="text" class="form-control" placeholder="Nhập họ tên của bạn">
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Email</label>
                                <input type="email" class="form-control" placeholder="email@example.com">
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Số điện thoại</label>
                                <input type="tel" class="form-control" placeholder="0901234567">
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Nội dung</label>
                                <textarea class="form-control" rows="5" placeholder="Nhập nội dung tin nhắn..."></textarea>
                            </div>

                            <button type="submit" class="btn btn-primary w-100">
                                <i class="fa fa-paper-plane me-2"></i> Gửi tin nhắn
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
