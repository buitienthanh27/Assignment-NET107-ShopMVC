<!-- Footer area start -->
<footer>
    <div class="footer-area pt-80 pb-40">
        <div class="container">
            <div class="row">
                <!-- Footer Widget 1 -->
                <div class="col-lg-3 col-md-6 col-sm-6">
                    <div class="footer-widget mb-40">
                        <div class="footer-logo mb-25">
                            <a asp-controller="Home" asp-action="Index">
                                <img src="~/assets/imgs/grocery/logo/logo.svg" alt="PhoneShop Logo">
                            </a>
                        </div>
                        <p>PhoneShop - Chuyên cung cấp điện thoại chính hãng, giá tốt nhất thị trường.</p>
                        <div class="footer-social">
                            <a href="#"><i class="fab fa-facebook-f"></i></a>
                            <a href="#"><i class="fab fa-twitter"></i></a>
                            <a href="#"><i class="fab fa-instagram"></i></a>
                            <a href="#"><i class="fab fa-youtube"></i></a>
                        </div>
                    </div>
                </div>

                <!-- Footer Widget 2 - Quick Links -->
                <div class="col-lg-3 col-md-6 col-sm-6">
                    <div class="footer-widget mb-40">
                        <h4 class="footer-widget-title">Liên kết nhanh</h4>
                        <ul class="footer-link">
                            <li><a asp-controller="Home" asp-action="About">Giới thiệu</a></li>
                            <li><a asp-controller="Product" asp-action="Index">Sản phẩm</a></li>
                            <li><a asp-controller="Home" asp-action="Contact">Liên hệ</a></li>
                            <li><a asp-controller="Account" asp-action="Register">Đăng ký</a></li>
                        </ul>
                    </div>
                </div>

                <!-- Footer Widget 3 - Categories -->
                <div class="col-lg-3 col-md-6 col-sm-6">
                    <div class="footer-widget mb-40">
                        <h4 class="footer-widget-title">Danh mục</h4>
                        <ul class="footer-link">
                            <li><a asp-controller="Product" asp-action="Category" asp-route-id="1">iPhone</a></li>
                            <li><a asp-controller="Product" asp-action="Category" asp-route-id="2">Samsung</a></li>
                            <li><a asp-controller="Order" asp-action="Index">Đơn hàng</a></li>
                            <li><a asp-controller="Cart" asp-action="Index">Giỏ hàng</a></li>
                        </ul>
                    </div>
                </div>

                <!-- Footer Widget 4 - Contact Info -->
                <div class="col-lg-3 col-md-6 col-sm-6">
                    <div class="footer-widget mb-40">
                        <h4 class="footer-widget-title">Liên hệ</h4>
                        <div class="footer-contact">
                            <p><i class="fa fa-map-marker-alt"></i> 123 Đường ABC, Quận 1, TP.HCM</p>
                            <p><i class="fa fa-phone"></i> <a href="tel:+84901234567">+84 90 123 4567</a></p>
                            <p><i class="fa fa-envelope"></i> <a href="mailto:info@phoneshop.com">info@phoneshop.com</a></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer Bottom -->
    <div class="footer-bottom">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6">
                    <div class="footer-copyright">
                        <p>&copy; @DateTime.Now.Year PhoneShop. All rights reserved.</p>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="footer-conditions text-lg-end">
                        <ul>
                            <li><a href="#">Terms & Condition</a></li>
                            <li><a href="#">Privacy Policy</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</footer>
<!-- Footer area end -->
