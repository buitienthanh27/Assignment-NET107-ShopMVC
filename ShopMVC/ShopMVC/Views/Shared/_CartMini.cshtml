@* Cart Mini Sidebar (Offcanvas) *@

<div class="fix">
    <div class="offcanvas__info grocery__offcanvas-info">
        <div class="offcanvas__wrapper">
            <div class="offcanvas__content">
                <div class="offcanvas__top mb-40 d-flex justify-content-between align-items-center">
                    <div class="offcanvas__logo">
                        <a asp-controller="Home" asp-action="Index">
                            <img src="~/assets/imgs/grocery/logo/logo-light.svg" alt="PhoneShop Logo">
                        </a>
                    </div>
                    <div class="offcanvas__close">
                        <button class="grocery-bg">
                            <i class="fal fa-times"></i>
                        </button>
                    </div>
                </div>
                
                <div class="offcanvas__content-main">
                    <h3 class="offcanvas__title">Giỏ hàng của bạn</h3>
                    
                    <div class="cart-mini-items">
                        <!-- Cart items will be loaded here via AJAX or server-side -->
                        <div class="empty-cart text-center py-4">
                            <i class="fa fa-shopping-cart fa-3x text-muted mb-3"></i>
                            <p>Giỏ hàng trống</p>
                        </div>
                    </div>
                    
                    <div class="offcanvas__btn mt-4">
                        <a asp-controller="Cart" asp-action="Index" class="btn btn-primary btn-block">
                            Xem giỏ hàng
                        </a>
                        <a asp-controller="Cart" asp-action="Checkout" class="btn btn-success btn-block mt-2">
                            Thanh toán
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="body-overlay"></div>
