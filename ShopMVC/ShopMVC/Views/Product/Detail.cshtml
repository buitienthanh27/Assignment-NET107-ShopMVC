@model Product

@{
    ViewData["Title"] = Model.ProductName + " - PhoneShop";
}

<!-- Breadcrumb -->
<section class="breadcrumb-area" style="background: #f8f9fa; padding: 30px 0;">
    <div class="container">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Trang chủ</a></li>
                <li class="breadcrumb-item"><a asp-controller="Product" asp-action="Index">Sản phẩm</a></li>
                <li class="breadcrumb-item active">@Model.ProductName</li>
            </ol>
        </nav>
    </div>
</section>

<!-- Product Details -->
<section class="product-details-area pt-60 pb-60">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <div class="product__details-thumb">
                    <img src="@ShopMVC.Helpers.ImageHelper.GetProductImagePath(Model.Image)" 
                         alt="@Model.ProductName"
                         class="img-fluid"
                         style="width: 100%; border-radius: 10px;">
                </div>
            </div>

            <div class="col-lg-6">
                <div class="product__details-content">
                    <div class="product__details-tag mb-2">
                        <a asp-controller="Product" asp-action="Index" asp-route-categoryId="@Model.CategoryId">
                            @Model.Category?.CategoryName
                        </a>
                    </div>

                    <h3 class="product__details-title mb-3">@Model.ProductName</h3>

                    <div class="product__details-price mb-4">
                        <span class="new-price h3 text-primary fw-bold">@Model.Price.ToString("N0") đ</span>
                    </div>

                    <p class="mb-4">@Model.Description</p>

                    <div class="product__details-meta mb-4">
                        <table class="table table-borderless">
                            @if (!string.IsNullOrEmpty(Model.Color))
                            {
                                <tr>
                                    <td><strong>Màu sắc:</strong></td>
                                    <td>@Model.Color</td>
                                </tr>
                            }
                            @if (!string.IsNullOrEmpty(Model.Size))
                            {
                                <tr>
                                    <td><strong>Kích thước:</strong></td>
                                    <td>@Model.Size</td>
                                </tr>
                            }
                            <tr>
                                <td><strong>Tồn kho:</strong></td>
                                <td>
                                    <span class="@(Model.Stock > 0 ? "text-success" : "text-danger")">
                                        @(Model.Stock > 0 ? Model.Stock + " sản phẩm" : "Hết hàng")
                                    </span>
                                </td>
                            </tr>
                        </table>
                    </div>

                    @if (Model.Stock > 0)
                    {
                        <div class="product__details-action">
                            <div class="d-flex align-items-center mb-3">
                                <button class="btn btn-outline-secondary cart-minus">
                                    <i class="fa fa-minus"></i>
                                </button>
                                <input class="form-control cart-input text-center mx-2" 
                                       type="number" value="1" min="1" max="@Model.Stock" style="width: 80px;">
                                <button class="btn btn-outline-secondary cart-plus">
                                    <i class="fa fa-plus"></i>
                                </button>
                            </div>
                            <button class="btn btn-primary btn-lg w-100 add-to-cart-btn" 
                                    data-product-id="@Model.ProductId">
                                <i class="fa fa-shopping-cart"></i> Thêm vào giỏ hàng
                            </button>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-warning">
                            <i class="fa fa-exclamation-triangle"></i> Sản phẩm hiện đang hết hàng
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script src="~/js/cart.js"></script>
}
