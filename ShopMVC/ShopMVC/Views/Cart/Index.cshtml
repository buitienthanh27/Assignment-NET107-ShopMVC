@model CartViewModel
@{
    ViewData["Title"] = "Giỏ hàng - PhoneShop";
}

<section class="cart-area pt-60 pb-60 cart-page">
    <div class="container">
        <h2 class="mb-4">Giỏ hàng của bạn</h2>

        @if (Model.IsEmpty)
        {
        }
        else
        {
            <div class="row">
                <div class="col-lg-8">
                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <thead class="table-light">
                                <tr>
                                    <th>Sản phẩm</th>
                                    <th width="150">Đơn giá</th>
                                    <th width="180">Số lượng</th>
                                    <th width="150">Tổng</th>
                                    <th width="80"></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.CartItems)
                                {
                                    <tr class="cart-item-row" data-cartdetail-id="@item.CartDetailId">
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <img src="@ImageHelper.GetProductImagePath(item.Image)"
                                                     style="width: 80px; height: 80px; object-fit: cover;"
                                                     class="me-3 rounded">
                                                <div>
                                                    <h6 class="mb-1">@item.ProductName</h6>
                                                    <small class="text-muted">@item.CategoryName</small>
                                                </div>
                                            </div>
                                        </td>
                                        <td class="align-middle">
                                            <strong class="item-price" data-price="@item.UnitPrice">@item.UnitPrice.ToString("N0") đ</strong>
                                        </td>
                                        <td class="align-middle">
                                            <div class="d-flex align-items-center">
                                                <input type="number"
                                                       class="form-control quantity-input text-center"
                                                       value="@item.Quantity"
                                                       min="1"
                                                       max="@item.AvailableStock"
                                                       data-cart-detail-id="@item.CartDetailId"
                                                       style="width: 70px;">

                                                <button class="btn btn-sm btn-outline-secondary ms-2 update-quantity-btn"
                                                        data-cart-detail-id="@item.CartDetailId" data-action="decrease">
                                                    <i class="fa fa-minus"></i>
                                                </button>
                                                <button class="btn btn-sm btn-outline-secondary ms-1 update-quantity-btn"
                                                        data-cart-detail-id="@item.CartDetailId" data-action="increase">
                                                    <i class="fa fa-plus"></i>
                                                </button>
                                            </div>
                                        </td>
                                        <td class="align-middle">
                                            <strong class="text-primary item-subtotal">@item.LineTotal.GetValueOrDefault().ToString("N0") đ</strong>
                                        </td>
                                        <td class="align-middle text-center">
                                            <button class="btn btn-danger btn-sm remove-cart-item-btn"
                                                    data-cart-detail-id="@item.CartDetailId">
                                                <i class="fa fa-times"></i>
                                            </button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <div class="mt-3 d-flex justify-content-between">
                        <a asp-controller="Product" asp-action="Index" class="btn btn-outline-secondary">
                            <i class="fa fa-arrow-left me-2"></i> Tiếp tục mua sắm
                        </a>
                        <button class="btn btn-outline-danger clear-cart-btn">
                            <i class="fa fa-trash-alt me-2"></i> Xóa giỏ hàng
                        </button>
                    </div>
                </div>

                <div class="col-lg-4">
                    <div class="card">
                        <div class="card-header bg-primary text-white">
                            <h5 class="mb-0">Tổng đơn hàng</h5>
                        </div>
                        <div class="card-body">
                            <div class="d-flex justify-content-between mb-2">
                                <span>Tạm tính:</span>
                                <span class="fw-bold cart-subtotal">@Model.SubTotal.ToString("N0") đ</span>
                            </div>
                            <div class="d-flex justify-content-between mb-2">
                                <span>Phí vận chuyển:</span>
                                <span class="fw-bold cart-shipping">@Model.ShippingFee.ToString("N0") đ</span>
                            </div>
                            <hr>
                            <div class="d-flex justify-content-between mb-3">
                                <strong>Tổng cộng:</strong>
                                <strong class="text-primary h5 cart-total-amount">@Model.Total.ToString("N0") đ</strong>
                            </div>

                            <a asp-controller="Cart" asp-action="Checkout" class="btn btn-success w-100 mb-2">
                                <i class="fa fa-credit-card me-2"></i> Tiến hành thanh toán
                            </a>
                        </div>
                    </div>

                </div>
            </div>
        }
    </div>
</section>

@section Scripts {
    <script src="~/js/cart.js"></script>
}